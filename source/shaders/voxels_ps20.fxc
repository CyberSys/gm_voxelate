struct PS_INPUT {
	float4 pos		: POSITION;
	float3 color	: COLOR;
	float2 uv		: TEXCOORD0;
};

sampler baseTextureSampler	: register( s0 );

float4 main( PS_INPUT input ) : COLOR
{
	float4 light = float4( input.color, 1 );

	float4 base_color = tex2D( baseTextureSampler, input.uv );

	return base_color * light;
}